<% unless @providers.nil? || @providers.empty? %>
  <%= form_tag( {action: 'create'}, method: :post) do %>
    <%= hidden_field_tag 'manifest', @manifest.to_json %>
    <%= hidden_field_tag 'id', @id %>
    <%= hidden_field_tag 'repository_type', @repository_type %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Uptime</th>
          <th>Location</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @providers.each do |p| %>
          <tr>
            <td><%= p['id'].humanize %></td>
            <td></td>
            <td></td>
            <td>
              <%= button_tag 'Sign up', type: :submit, class: "btn btn-info btn-large", name: "provider", value: p['id'] %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
