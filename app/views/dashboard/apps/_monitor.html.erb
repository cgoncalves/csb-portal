<h2>Monitor</h2>
<br/>

<% @monitor.instances.each do |instance| %>
  <h3>Instance #<%= instance.id %> <small><%= instance.date %></small></h3>

  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>

      <% instance.metrics.each do |metric| %>
        <tr>
          <td><%= metric.name %></td>
          <td><%= "#{metric.value} #{metric.unit}" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
