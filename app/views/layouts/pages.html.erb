<% content_for :main_content do %>
  <div class="container">
    <% if content_for? :page_title %>
      <div class="row">
        <div class="span12">
          <div class="page-header">
            <h1><%= yield :page_title %></h1>
          </div>
        </div>
      </div>
      <br/>
    <% end %>
    <div class="row">
      <div class="span12">
        <%= yield :content %>
      </div>
    </div>
  </div>
<% end %>

<%= render :template => 'layouts/application' %>
